<PropertyList>

  <path>palonnier.ac</path>

  <animation>
    <type>range</type>
    <min-m>  0 </min-m>
    <max-m> 45 </max-m>
  </animation>

  <animation>
    <!-- Objets opaques -->
    <object-name>boitier</object-name>
    <object-name>palonnierL</object-name>
    <object-name>palonnierR</object-name>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>palonnierL</object-name>
    <object-name>brakeL</object-name>
    <property>surface-positions/rudder-pos-norm</property>
    <factor>25</factor>
    <axis>
      <x>  0 </x>
      <y>  1 </y>
      <z>  0 </z>
    </axis>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>palonnierR</object-name>
    <object-name>brakeR</object-name>
    <property>surface-positions/rudder-pos-norm</property>
    <factor>25</factor>
    <axis>
      <x>  0 </x>
      <y> -1 </y>
      <z>  0 </z>
    </axis>
  </animation>


  <animation>
    <type>rotate</type>
    <object-name>brakeL</object-name>
    <property>controls/gear/brake-left</property>
    <factor>25</factor>
    <center>
      <x-m> 0.000474 </x-m>
      <y-m> 0.009147 </y-m>
      <z-m> 0.101700 </z-m>
    </center>
    <axis>
      <x>  0 </x>
      <y> -1 </y>
      <z>  0 </z>
    </axis>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>brakeR</object-name>
    <property>controls/gear/brake-right</property>
    <factor>25</factor>
    <center>
      <x-m> 0.000474 </x-m>
      <y-m> 0.009147 </y-m>
      <z-m> 0.101700 </z-m>
    </center>
    <axis>
      <x>  0 </x>
      <y> -1 </y>
      <z>  0 </z>
    </axis>
  </animation>

</PropertyList>
