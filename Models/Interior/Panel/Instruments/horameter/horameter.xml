<PropertyList>

  <path>horameter.ac</path>

  <animation>
    <type>range</type>
    <min-m>  0 </min-m>
    <max-m> 45 </max-m>
  </animation>

  <animation>
    <object-name>face</object-name>
    <object-name>hours01</object-name>
    <object-name>hours1</object-name>
    <object-name>hours10</object-name>
    <object-name>hours100</object-name>
    <object-name>hours1000</object-name>
    <object-name>hours10000</object-name>
  </animation>

  <animation>
    <type>noshadow</type>
    <object-name>vitre</object-name>
  </animation>

  <animation>
    <type>shader</type>
    <shader>chrome</shader>
    <texture>Aircraft/Cap10B/Models/Effects/glass_shader.png</texture>
    <object-name>vitre</object-name>
  </animation>

  <animation>
    <type>range</type>
    <min-m>  0 </min-m>
    <max-m> 45 </max-m>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>hours01</object-name>
    <property>instrumentation/horameter/elapsed-time</property>
    <factor>0.1</factor>
    <center>
      <x-m> -0.01414 </x-m>
      <y-m>  0.0 </y-m>
      <z-m>  0.0 </z-m>
    </center>
    <axis>
      <x> 0 </x>
      <y> -1 </y>
      <z> 0 </z>
    </axis>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>hours1</object-name>
    <property>instrumentation/horameter/elapsed-time</property>
    <factor>0.01</factor>
