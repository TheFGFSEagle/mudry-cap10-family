<?xml version="1.0" encoding="UTF-8"?>

<PropertyList>

  <path>hdg.ac</path>

  <animation>
    <type>range</type>
    <min-m>  0 </min-m>
    <max-m> 45 </max-m>
  </animation>
  
  <animation>
    <object-name>HDGgauge</object-name>
    <object-name>HDG.knob</object-name>
    <object-name>HDGneedle</object-name>
    <object-name>HDGpointer</object-name>

    <object-name>vitre</object-name>
  </animation>

  <animation>
    <type>noshadow</type>
    <object-name>vitre</object-name>
  </animation>

  <animation>
    <type>shader</type>
    <shader>chrome</shader>
    <texture>Aircraft/Cap10B/Models/Effects/glass_shader.png</texture>
    <object-name>vitre</object-name>
  </animation>

  <animation>
    <type>texrotate</type>
    <object-name>HDGneedle</object-name>
    <property>/instrumentation/heading-indicator/indicated-heading-deg</property>
    <axis>
      <x>  0 </x>
      <y>  0 </y>
      <z> -1 </z>
    </axis>
    <center>
      <x> 0.5 </x>
      <y> 0.5 </y>
    </center>
  </animation>

   <!--             Heading Offset             -->
 <animation>
  <type>pick</type>
  <object-name>HDG.knob</object-name>
  <visible>true</visible>
  <action>
    <name>small decrease (scrollwheel)</name>
    <button>3</button>
    <repeatable>true</repeatable>
    <binding>
      <command>property-adjust</command>
      <property>instrumentation/heading-indicator/offset-deg</property>
      <step>-2</step>
      <min>0</min>
      <max>360</max>
      <wrap>1</wrap>
    </binding>
  </action>
  <action>
    <name>small increase (scrollwheel)</name>
    <button>4</button>
    <repeatable>true</repeatable>
    <binding>
      <command>property-adjust</command>
      <property>instrumentation/heading-indicator/offset-deg</property>
      <step>2</step>
      <min>0</min>
      <max>360</max>
      <wrap>1</wrap>
    </binding>
  </action>
 </animation>

</PropertyList>
