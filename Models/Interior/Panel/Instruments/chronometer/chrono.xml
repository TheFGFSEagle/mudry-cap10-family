<PropertyList>

  <path>chrono.ac</path>

  <animation>
    <type>range</type>
    <min-m>  0 </min-m>
    <max-m> 45 </max-m>
  </animation>

  <animation>
    <object-name>face</object-name>
    <object-name>lcd</object-name>
    <object-name>on-off.button</object-name>
    <object-name>reset.button</object-name>
    <object-name>start.button</object-name>
    <object-name>pause.button</object-name>
    <object-name>stop.button</object-name>
  </animation>

  <animation>
    <type>range</type>
    <min-m>  0 </min-m>
    <max-m> 45 </max-m>
  </animation>

  <animation>
    <type>pick</type>
    <object-name>on-off.button</object-name>
    <action>
      <button>0</button>
      <binding>
        <command>property-toggle</command>
        <property>instrumentation/chrono/power-btn</property>
      </binding>
      <binding>
        <command>nasal</command>
        <script>cap10b.chrono.stop()</script>
      </binding>
      <binding>
        <command>nasal</command>
        <script>cap10b.chrono.reset()</script>
      </binding>
    </action>
  </animation>

  <animation>
    <type>pick</type>
    <object-name>start.button</object-name>
    <action>
      <button>0</button>
      <binding>
        <command>nasal</command>
        <script>cap10b.chrono.start()</script>
        <condition>
          <property>instrumentation/chrono/power-btn</property>
        </condition>
      </binding>
    </action>
  </animation>

  <animation>
    <type>pick</type>
    <object-name>stop.button</object-name>
    <action>
      <button>0</button>
      <binding>
        <command>nasal</command>
        <script>cap10b.chrono.stop()</script>
        <condition>
          <property>instrumentation/chrono/power-btn</property>
        </condition>
      </binding>
    </action>
  </animation>

  <animation>
    <type>pick</type>
    <object-name>reset.button</object-name>
    <action>
      <button>0</button>
      <binding>
        <command>nasal</command>
        <script>cap10b.chrono.reset()</script>
        <condition>
          <property>instrumentation/chrono/power-btn</property>
        </condition>
      </binding>
    </action>
  </animation>

  <text>
    <name>chronoValue</name>
    <type type="string">text-value</type>
    <property type="string">instrumentation/chrono/formated-time</property>
    <format type="string">%s</format>
    <draw-text type="bool">true</draw-text>
    <font>led.txf</font>
    <character-size type="double">0.0105</character-size>
    <character-aspect-ratio type="double">1</character-aspect-ratio>
    <axis-alignment>yz-plane</axis-alignment>
    <max-height>0.06</max-height>
    <max-width>0.05</max-width>
    <font-resolution>
      <width type="int">64</width>
      <height type="int">64</height>
    </font-resolution>
    <alignment>center-center</alignment>
    <offsets>
      <x-m>  0.000 </x-m>
      <y-m>  0.000 </y-m>
      <z-m> -0.002 </z-m>
    </offsets>
  </text>

  <animation>
    <type>select</type>
    <object-name>chronoValue</object-name>
    <condition>
      <and>
        <property>instrumentation/chrono/power-btn</property>
        <greater-than-equals>
          <property>systems/electrical/volts</property>
          <value>3</value>
        </greater-than-equals>
      </and>
    </condition>
  </animation>

  <animation>
    <type>material</type>
    <object-name>chronoValue</object-name>
    <emission>
      <red>   0.0 </red>
      <green> 0.0 </green>
      <blue>  0.0 </blue>
    </emission>
    <ambient>
      <red>   0.0 </red>
      <green> 1.0 </green>
      <blue>  0.2 </blue>
    </ambient>
    <diffuse>
      <red>   0.0 </red>
      <green> 0.0 </green>
      <blue>  0.0 </blue>
    </diffuse>
    <specular>
      <red>   0.0 </red>
      <green> 0.0 </green>
      <blue>  0.0 </blue>
    </specular>
  </animation>
  
</PropertyList>

