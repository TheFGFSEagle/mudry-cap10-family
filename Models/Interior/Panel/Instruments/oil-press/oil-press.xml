<PropertyList>

  <path>oil-press.ac</path>

  <animation>
    <type>range</type>
    <min-m>  0 </min-m>
    <max-m> 45 </max-m>
  </animation>

  <animation>
    <object-name>Fond</object-name>
    <object-name>aiguille</object-name>
    <object-name>contour</object-name>
  </animation>

  <animation>
    <type>range</type>
    <min-m>  0 </min-m>
    <max-m> 45 </max-m>
  </animation>

  <animation>
    <type>noshadow</type>
    <object-name>vitre</object-name>
  </animation>
  
  <animation>
    <type>shader</type>
    <shader>chrome</shader>
    <texture>Aircraft/Cap10B/Models/Effects/glass_shader.png</texture>
    <object-name>vitre</object-name>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>aiguille</object-name>
    <property>fdm/jsbsim/propulsion/engine/oil-pressure-psi-pos</property>
    <center>
      <x-m>  0.0000 </x-m>
      <y-m>  0.0000 </y-m>
      <z-m> -0.0127 </z-m>
    </center>
    <axis>
      <x> -1 </x>
      <y>  0 </y>
      <z>  0 </z>
    </axis>
    <interpolation>
      <entry><ind>   0.00 </ind><dep>  0.00 </dep></entry>
      <entry><ind>  29.02 </ind><dep>  9.17 </dep></entry>
      <entry><ind>  58.04 </ind><dep> 17.70 </dep></entry>
      <entry><ind>  87.06 </ind><dep> 27.20 </dep></entry>
      <entry><ind> 116.08 </ind><dep> 40.24 </dep></entry>
      <entry><ind> 145.10 </ind><dep> 54.11 </dep></entry>
    </interpolation>
  </animation>
  
</PropertyList>

