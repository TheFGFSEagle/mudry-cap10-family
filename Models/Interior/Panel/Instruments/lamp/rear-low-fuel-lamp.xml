<PropertyList>

  <path>red-led.ac</path>

  <animation>
    <type>range</type>
    <min-m>  0 </min-m>
    <max-m> 45 </max-m>
  </animation>

  <animation>
    <object-name>supportLed</object-name>
    <object-name>led</object-name>
  </animation>

  <animation>
    <type>material</type>
    <object-name>led</object-name>
    <condition>
      <less-than-equals>
        <property>consumables/fuel/tank[1]/level-gal_us</property>
        <value>1.06</value> <!-- 4 litres -->
      </less-than-equals>
    </condition>
    <emission>
      <red>1.0</red>
      <green>0.2</green>
      <blue>0.0</blue>
      <factor-prop>systems/electrical/volts</factor-prop>
    </emission>
  </animation>

</PropertyList>
