<PropertyList>

  <path>handle.ac</path>

  <animation>
    <type>range</type>
    <min-m>  0 </min-m>
    <max-m> 45 </max-m>
  </animation>
  
  <animation>
    <!-- Objets opaques -->
    <object-name>mancheg</object-name>
    <object-name>manched</object-name>
    <object-name>support1g</object-name>
    <object-name>support1d</object-name>
    <object-name>support2g</object-name>
    <object-name>support2d</object-name>
    <object-name>support3g</object-name> <!-- ne bouge pas -->
    <object-name>support3d</object-name> <!-- ne bouge pas -->
  </animation>
  
  <!-- ailerons -->    
  <animation>
    <type>rotate</type>
    <object-name>mancheg</object-name>
    <property>/controls/flight/aileron</property>
    <factor>20</factor>
    <center>
      <x-m>  0.000 </x-m>
      <y-m> -0.284 </y-m>  
      <z-m>  0.034 </z-m>    
    </center>
    <axis>
      <x> -1 </x>
      <y>  0 </y>
      <z>  0 </z>
    </axis>
